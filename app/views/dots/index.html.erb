<!-- main map -->

<div class="col-md-9" >
    <div class="" id="map"></div>
</div>

<div class="col-md-3">
    <!-- make Dot -->
    <div>
        <button type="button" class="btn btn-info btn-lg btn-block" id="makingDot">
            <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Dot! 
            </button>
    </div>
    
    <br>
    <!-- Dot list -->
    <div>
        <div class="list-group" id="dots">
            <% @dots.each do |p| %>
            <a class='dot list-group-item' id="<%=p.id%>" type="button"  data-toggle="modal" data-target="#myDot">
               <p class="list-group-item-text">
               Dot id: <%=p.id%> </p>
            </a>
            <% end %>
        </div>
    </div>
</div>

<!-- edit Dot Modal -->
<div class="modal fade" id="myDot" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myDotLabel">Dot title</h4>
      </div>
      <div class="modal-body">
        <form>
            <div class="form-group">
                <input type="hidden" class="form-control" id="dotId" >
            </div>
            <div class="form-group">
                <label for="exampleInputFile">이미지 업로드(현재 미지원)</label>
                <input type="file" id="exampleInputFile">
            <p class="help-block">여기에 블록레벨 도움말 예제</p>
            </div>
            <div class="form-group">
                <label>latitude</label>
                <input type="text" class="form-control" id="dotLat" >
            </div>
            <div class="form-group">
                <label>longitude</label>
                <input type="text" class="form-control" id="dotLng" >
            </div>
            <div class="form-group">
                <label>content</label>
                <input type="text" class="form-control" id="dotContent">
            </div>
            <div class="form-group">
                <label>stat_id</label>
                <input type="text" class="form-control" id="dotStat_id" >
            </div>
            <div class="form-group">
                <label>updated_at</label>
                <p id="dotUpdated_at"></p>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="updatingDot">Update</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="destroyingDot" >Delete</button>
      </div>
    </div>
  </div>
</div>